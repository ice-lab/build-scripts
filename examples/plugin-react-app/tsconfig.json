{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
    "jsx": "react",
    "target": "esnext",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "scripthost",
      "es2018.promise"
    ],
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}